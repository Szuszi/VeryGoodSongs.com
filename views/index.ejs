<%- include('header') -%>

<%- include('menu', {active: 'song'}) -%>

    <div class="container my-5">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Artists</th>
                    <th scope="col" class="text-center" style="width: 100px;">Rating</th>
                    <th scope="col" class="text-center" style="width: 100px;">Length</th>
                    <th scope="col" style="width:  100px;"></th>
                </tr>
            </thead>
            <tbody>
                <% songs.forEach(function(song){ %>
                    <tr>
                        <td>
                            <%= song.title %>
                        </td>
                        <td>
                            
                            <% artists.forEach(function(artist) { %>
                                <% if (song._artist.equals(artist._id)) { %>
                                    <a href="/artist/list/<%= song._artist %>" class="text-dark">
                                    <%= artist.name %>
                                    </a>
                                <% } %>
                            <% }); %>
                        </td>
                        <td class="text-center">
                            10/<%= song.rating %>
                        </td>
                        <td class="text-center">
                            <%= song.length %>
                        </td>
                        <td class="text-center">
                            <a href="/song/edit/<%= song._id %>" class="btn btn-sm btn-primary"><i class="far fa-edit"></i></a>
                            <a href="/song/del/<%= song._id %>" class="btn btn-sm btn-danger"><i class="far fa-trash-alt"></i></a>
                        </td>
                    </tr>
                <% }); %>  
            </tbody>
        </table>
        <br>
        <a href="/song/new" class="btn btn-block btn-primary">Add new song</a>
    </div>


    <%- include('footer') -%>