<%- include('header') -%>

<%- include('menu', {active: 'none'}) -%>

    <div class="container">
        <div class="card bg-light mt-5 mb-n5">
            <div class="card-header">
                Add new song
            </div>
            <div class="card-body">
                <form method="POST">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" id="title" name="title">
                    </div>
                    <div class="form-group">
                        <label for="artist">Artist</label>
                        <select class="form-control" id="artist" name="artist">
                            <option value="" selected disabled hidden>Choose here...</option>
                            <% artists.forEach(function(artist){ %>
                            <option value="<%= artist._id %>"><%= artist.name %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="rating">Rating</label>
                        <input type="number" class="form-control" id="rating" name="rating" min="0" max="10">
                        <small id="ratingtHelp" class="form-text text-muted">A number between 0 and 10</small>
                    </div>
                    <div class="form-group">
                        <label for="length">Length</label>
                        <input type="text" class="form-control" id="length" name="length">
                        <small id="lengthHelp" class="form-text text-muted">In the format: minutes:seconds</small>
                    </div>
                    <input type="submit" class="btn btn-primary" value="Add song"/>
                    <a type="button" href="/song" class="btn btn-outline-primary">Cancel</a>
                </form>
            </div>
        </div>
    </div>

    <%- include('footer') -%>